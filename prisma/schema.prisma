generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Owner {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  name           String?
  password       String
  is_verified    Boolean
  otp            Int?
  last_login     String?
  created_at     String
  updated_at     String?
}

model Item {
  id        String   @id @default(cuid())
  name      String
  price     Int
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  BillItems BillItem[]
}

model Bill{
  id        String   @id @default(cuid())
  total     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  BillItems BillItem[]
}

model BillItem{
  id        String   @id @default(cuid())
  bill      Bill     @relation(fields: [billId], references: [id])
  billId    String
  item      Item     @relation(fields: [itemId], references: [id])
  itemId    String
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}